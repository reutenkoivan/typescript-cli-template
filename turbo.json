{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "//#lint:code": {},
    "//#lint:code:fix": {
      "cache": false
    },
    "//#lint:deps": {},
    "//#lint:deps:fix": {
      "cache": false
    },
    "//#lint:deps:graph": {},
    "//#lint:deps:versions": {},
    "//#lint:deps:versions:fix": {
      "cache": false
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "passThroughEnv": ["NODE_ENV", "TSDOWN_VERBOSE"]
    },
    "dev": {},
    "doc:build": {},
    "doc:start": {},
    "lint:types": {
      "dependsOn": ["topo"]
    },
    "test": {
      "dependsOn": ["@repo/test-unit#build", "@repo/vitest-config#build", "^test"],
      "passThroughEnv": ["VITEST_VERBOSE", "VITEST_COVERAGE"]
    },

    "test:watch": {
      "cache": false,
      "dependsOn": ["@repo/test-unit#build", "@repo/vitest-config#build"],
      "passThroughEnv": ["VITEST_VERBOSE", "VITEST_COVERAGE"],
      "persistent": true
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  },
  "ui": "tui"
}
